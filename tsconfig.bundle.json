{
    "compilerOptions": {
        "module": "system",
        "moduleResolution": "node",
        "target": "es5",
        "noImplicitAny": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "inlineSourceMap": true,
        "declaration": false,
        "rootDir": "./src",
        "outFile": "./bundles/ng2-bs4-modal.js"
    },
    "exclude": [
        "node_modules",
        "demo",
        "bundles",
        "components",
        "directives",
        "module",
        "src/test",
        "**/*.spec.ts"
    ]
}
